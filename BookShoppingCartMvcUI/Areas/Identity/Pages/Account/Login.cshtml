@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<link href="/css/login_register.css" rel="stylesheet" />
<!-- Pills navs -->
<ul class="nav nav-pills nav-justified mb-3" id="ex1" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" asp-area="Identity" asp-page="/Account/Login">Đăng nhập</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link"  asp-area="Identity" asp-page="/Account/Register">Đăng ký</a>
    </li>
</ul>
<!-- Pills navs -->
<!-- Pills content -->
<div class="tab-content">
    <div class="tab-pane fade show active" id="pills-login" role="tabpanel" aria-labelledby="tab-login">
        <section>
            <form id="account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="text-center mb-3">
                    <p>Đăng nhập bằng:</p>
                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-facebook-f"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-google"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-twitter"></i>
                    </button>

                    <button type="button" class="btn btn-link btn-floating mx-1">
                        <i class="fab fa-github"></i>
                    </button>
                </div>

                <p class="text-center">Hoặc:</p>

                <!-- Email input -->
                <div class="form-outline mb-4">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">Email</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>

                <!-- Password input -->
                <div class="form-outline mb-4">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Mật khẩu</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>

                <!-- 2 column grid layout -->
                <div class="row mb-4">
                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Checkbox -->
                        <label asp-for="Input.RememberMe" class="form-label">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label>
                    </div>

                    <div class="col-md-6 d-flex justify-content-center">
                        <!-- Simple link -->
                        <a id="forgot-password" asp-page="./ForgotPassword">Quên mật khẩu?</a>
                    </div>
                </div>

                <!-- Submit button -->
                <div class="w-auto d-flex justify-content-center">
                    <button id="login-submit" type="submit" class="btn btn-primary btn-block mb-4 w-100">Đăng nhập</button>
                </div>

                <!-- Register buttons -->
                <div class="text-center">
                    <p>Không phải thành viên? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Đăng ký</a></p>
                </div>
            </form>
        </section>
    </div>
</div>
<!-- Pills content -->

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
